#
# System-specific settings
#

PREFIX=         @prefix@
BINDIR=         @prefix@/bin
LIBDIR=         @prefix@/lib/$(PKG)
DATADIR=        @prefix@/share/doc/$(PKG)
MANDIR=         @prefix@/man
IFACEDIR=       $(LIBDIR)/imports

GHC=            @WithGhc@

HC_OPTS=        -Wall -Werror -cpp -fglasgow-exts
HC_OPTS+=       -funbox-strict-fields -O2 -fvia-C
#HC_OPTS+=       -Onot -fasm -H64m

#HC_OPTS+=      -debug 
#HC_OPTS+=	-fignore-asserts 

# user-specified
HC_OPTS+=	$(EXTRA_HC_OPTS)

# build statically?
STATIC=NO

#
# List of modules to statically link, or to load dynamically
#
# edit this to change which modules you'd like to use.
#
ifeq "$(STATIC)" "NO"
PLUGINS=       Dict Dummy Eval Karma Quote Seen State \
               Topic Type Plugs Babel Version More Pl Help Google
STATICS=       Base System Dynamic
else
PLUGINS=
STATICS=       Base System Dynamic Dict Dummy Eval Karma Quote Seen \
               State Topic Type Plugs Babel Version More Pl Help Google
endif

GHC_VERSION=	@GHC_VERSION@
GLASGOW_HASKELL=@GLASGOW_HASKELL@

# Comment out if you're on windows
PKG_OPTS=	-package posix

ifeq "$(GLASGOW_HASKELL)" "604"
HC_OPTS+=	-threaded
endif

ifeq "$(GLASGOW_HASKELL)" "604"
RECURSIVE_MODULE_SUFFIX=	hs-boot
else
RECURSIVE_MODULE_SUFFIX=	hi-boot
endif

HADDOCK=        @HaddockCmd@
HADDOCK_OPTS=   -h

INSTALL=        sh $(TOPDIR)/install-sh -c
INSTALL_PROGRAM=$(INSTALL) -m 755
INSTALL_DATA=   $(INSTALL) -m 644
INSTALL_DIR=    mkdir -p
