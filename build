#!/bin/sh

set -e
prefix=
#prefix="--prefix /home/cgibbard/local"

for x in oeis brainfuck plugins show smallcheck numbers arrows parallel unlambda
   do cabal $prefix --global install $x
      done
cd lambdabot-utils
cabal $prefix --global install
cd ..
cabal install --libdir=`pwd`/lib --bindir=`pwd` --docdir=`pwd`/doc
ghc -v0 -c -O2 -funbox-strict-fields -odir . -hidir . scripts/SmallCheck.hs
